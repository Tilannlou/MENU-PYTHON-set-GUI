menu clear
menu window main 800 600 "進階 MENU002 演示"
menu style header bg="#2c3e50" color="#ecf0f1" font="Arial,16,bold"
menu style button bg="#3498db" color="#ffffff" font="Arial,12,bold"
menu style status bg="#f1c40f" color="#000000" font="Arial,10"

menu control label title text="🎨 MENU002 語氣鏡像主控台" x=50 y=30 w=700 h=40 class=header
menu control label subtitle text="展示所有指令功能" x=50 y=80 w=700 h=30 class=status

menu control button btnClear text="清除" x=50 y=140 w=120 h=35 class=button
menu control button btnAPI text="API測試" x=200 y=140 w=120 h=35 class=button
menu control button btnPopup text="開啟彈窗" x=350 y=140 w=120 h=35 class=button
menu control button btnMax text="最大化" x=500 y=140 w=120 h=35 class=button
menu control button btnMin text="最小化" x=50 y=190 w=120 h=35 class=button
menu control button btnHide text="隱藏" x=200 y=190 w=120 h=35 class=button
menu control button btnShow text="顯示" x=350 y=190 w=120 h=35 class=button
menu control button btnList text="彈窗列表" x=500 y=190 w=120 h=35 class=button

menu control label statusLabel text="狀態：待機中" x=50 y=250 w=700 h=30 class=status

menu api-set demo "https://api.example.com" key=abc123
menu api-call btnAPI demo GET "/status" -> statusLabel.text

menu popup-window popupA "設定視窗" size="400x300" offset_x=100 offset_y=100
menu popup-content popupA "control label msg text='這是語氣鏡像的彈窗' x=20 y=20 w=360 h=30" "control button closeBtn text='關閉' x=150 y=200 w=100 h=30"

menu popup-send-data popupA "彈窗已關閉" -> statusLabel.text

menu binding btnClear click "statusLabel.text = '已清除 scaffold'"
menu binding btnPopup click "popupA.popup_id = '設定視窗'; statusLabel.text = '彈窗已開啟'"
menu binding btnMax click "window-maximize main; statusLabel.text = '主窗口已最大化'"
menu binding btnMin click "window-minimize main; statusLabel.text = '主窗口已最小化'"
menu binding btnHide click "window-hide popupA; statusLabel.text = '彈窗已隱藏'"
menu binding btnShow click "window-show popupA; statusLabel.text = '彈窗已顯示'"
menu binding btnList click "popup-list"

menu show